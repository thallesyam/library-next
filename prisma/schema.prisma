// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  phone String
  city  String
  uf    String
  Book  Books[]
  image String
}

model Books {
  id              Int    @id @default(autoincrement())
  ownerId         Int
  bookOwner       Users  @relation(fields: [ownerId], references: [id])
  title           String
  company         String
  author          String
  publicationDate String
  category        String
  image           String
  situation       String
}
